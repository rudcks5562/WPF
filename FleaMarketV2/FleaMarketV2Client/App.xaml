            </ResourceDictionary.MergedDictionaries>
            <locals:ImageToByteConvertService x:Key="ImageToByteConvertService"/>
            <locals:CountConverter x:Key="CountConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>